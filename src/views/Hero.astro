---
import '../styles/views/hero.css';
---

<section id="hero" class="hero">
    <div class="hero-text">
        <div class="text-container">
            <h1>Bytes</h1>
            <p>El ERP que tu restaurante necesitaba</p>
        </div>
        <a href="#">Registrar</a>
    </div>
    <div class="hero-image">

    </div>
</section>

<style>
    #hero {
    display: flex;
    width: 100%;
    padding: 96px 144px;
    align-items: center;
    gap: 104px;
    align-self: stretch;
    background: var(--Fondo, #FAF3E0);

    & .hero-text {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: 32px;
        flex: 1 0 0;

        & .text-container {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            gap: 16px;
            align-self: stretch;

            & h1 {
                color: var(--Principal, #581845);
    
                /* Heading/Headline 1 */
                font-size: 64px;
                font-style: normal;
                font-weight: 600;
                line-height: 76px; /* 118.75% */
            }
    
            & p {
                color: var(--Texto-Secundario, #7D7D7D);
    
                /* Body/Regular/Body 2 */
                font-size: 16px;
                font-style: normal;
                font-weight: 400;
                line-height: 24px; /* 150% */
            }
    
        }
        
        & a {
            display: flex;
            padding: 14px;
            justify-content: center;
            align-items: center;
            gap: 10px;
            border-radius: 4px;
            background: var(--Principal, #581845);
            color: white;
            text-decoration: none;
        }
    }

    & .hero-image {
        width: 400px;
        height: 400px;
        aspect-ratio: 1/1;
        border-radius: 30px;
        background: var(--Principal, #581845);
    }
}

</style>